{
  "$schema": "http://json-schema.org/draft-06/schema#",
  "type": "object",
  "required": [
    "name"
  ],
  "additionalProperties": false,
  "properties": {
    "name": {
      "type": "string",
      "minLength": 1
    },
    "sid": {
      "type": "string",
      "maxLength": 39,
      "pattern": "^[0-9a-zA-Z\\._-]+$"
    },
    "description": {
      "type": "string"
    },
    "repository": {
      "type": "string"
    },
    "events": {
      "oneOf": [
        { "type": "null" },
        {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[0-9a-zA-Z_-]+$": {
              "$ref": "#/definitions/event"
            }
          }
        }
      ]
    },
    "tasks": {
      "oneOf": [
        { "type": "null" },
        {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[0-9a-zA-Z_-]+$": {
              "$ref": "#/definitions/task"
            }
          }
        }
      ]
    },
    "dependencies": {
      "type": "object",
      "additionalProperties": false,
      "patternProperties": {
        "^[0-9a-zA-Z_-]+$": {
          "$ref": "#/definitions/dependency",
          "required": [
            "image"
          ]
        }
      }
    },
    "configuration": {
      "$ref": "#/definitions/dependency"
    }
  },
  "definitions": {
    "parameters": {
      "oneOf": [
        { "type": "null" },
        {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[0-9a-zA-Z_-]+$": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "type"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "optional": {
                  "type": "boolean"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "String",
                    "Number",
                    "Boolean",
                    "Object"
                  ],
                  "default": "String"
                }
              }
            }
          }
        }
      ]
    },
    "task": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "outputs"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "inputs": {
          "$ref": "#/definitions/parameters"
        },
        "secrets": {
          "$ref": "#/definitions/parameters"
        },
        "outputs": {
          "type": "object",
          "additionalProperties": false,
          "patternProperties": {
            "^[0-9a-zA-Z_-]+$": {
              "type": "object",
              "additionalProperties": false,
              "required": [
                "data"
              ],
              "properties": {
                "name": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "data": {
                  "$ref": "#/definitions/parameters"
                }
              }
            }
          }
        }
      }
    },
    "event": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "data"
      ],
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "data": {
          "$ref": "#/definitions/parameters"
        }
      }
    },
    "dependency": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "image": {
          "type": "string",
          "minLength": 1
        },
        "command": {
          "type": "string"
        },
        "args": {
          "oneOf": [
            { "type": "null" },
            {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "volumes": {
          "oneOf": [
            { "type": "null" },
            {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "volumesfrom": {
          "oneOf": [
            { "type": "null" },
            {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "string"
              }
            }
          ]
        },
        "ports": {
          "oneOf": [
            { "type": "null" },
            {
              "type": "array",
              "uniqueItems": true,
              "items": {
                "type": "string"
              }
            }
          ]
        }
      }
    }
  }
}
